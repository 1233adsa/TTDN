@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "Admin Panel";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Admin Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css" />
    <style>
        body {
            display: flex;
            min-height: 100vh;
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            color: darkgreen;
        }

        .sidebar {
            width: 270px;
            background: linear-gradient(135deg, #008000, #004d00);
            color: white;
            padding: 20px;
            position: fixed;
            height: 100vh;
            box-shadow: 4px 0 10px rgba(0, 0, 0, 0.5);
        }

        .sidebar h4 {
            text-align: center;
            font-size: 24px;
            margin-bottom: 20px;
        }

        .sidebar a {
            color: white;
            text-decoration: none;
            padding: 12px;
            display: block;
            font-size: 18px;
            transition: 0.3s;
            border-radius: 5px;
        }

        .sidebar a:hover {
            background-color: rgba(255, 255, 255, 0.2);
            transform: scale(1.05);
        }

        .content {
            margin-left: 280px;
            padding: 20px;
            flex-grow: 1;
        }

        .navbar {
            background-image: url('/images/soccer-banner.jpg');
            background-size: cover;
            background-position: center;
            padding: 20px;
            color: white;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.8);
            background-color: gray; 
            box-shadow: 4px 0 10px rgba(0, 0, 0, 0.5);
        }

        .logout-btn {
            background-color: #ff3b3b;
            color: white;
            border: none;
            padding: 10px 18px;
            border-radius: 6px;
            transition: 0.3s;
        }

        .logout-btn:hover {
            background-color: #b22234;
            transform: scale(1.1);
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <h4>⚽ Menu quản trị ⚽</h4>
        <hr>
        <a asp-controller="Field" asp-action="Index"><i class="fa-solid fa-futbol"></i> Quản lý sân bóng</a>
        <a asp-controller="FieldScheduleManage" asp-action="Index"><i class="fa-solid fa-calendar-alt"></i> Quản lý lịch sân</a>
        <a asp-controller="Price" asp-action="Index"><i class="fa-solid fa-money-bill-wave"></i> Quản lý giá sân</a>
        <a asp-controller="BookingManage" asp-action="Index"><i class="fa-solid fa-clipboard-list"></i> Quản lý đơn đặt sân</a>
        <a asp-controller="Customer" asp-action="Index"><i class="fa-solid fa-users"></i> Quản lý khách hàng</a>
    </div>
    <div class="content">
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
                <span class="navbar-brand">🏆 Trang quản trị  🏆</span>
                <div class="collapse navbar-collapse justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <form id="logoutForm" method="post" asp-controller="Account" asp-action="Logout" class="d-inline">
                                <button type="submit" class="btn logout-btn">
                                    <i class="fa-solid fa-sign-out-alt"></i> Đăng xuất
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <main>
            @RenderBody()
        </main>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
